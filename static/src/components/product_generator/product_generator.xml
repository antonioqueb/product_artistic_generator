<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="product_artistic_generator.GeneratorTemplate" owl="1">
        <div class="o_artistic_wrapper">
            <div class="o_main_card">
                
                <!-- PASO 1: CARACTERÍSTICAS -->
                <div t-if="state.step === 1" class="o_fade_in">
                    <h2 class="o_title">NUEVO PRODUCTO</h2>
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="o_label">NOMBRE ARTÍSTICO</label>
                            <input type="text" class="o_input" t-model="state.selection.artistic_name" placeholder="Ej: BLANCO CARRARA"/>
                        </div>
                        <div class="col-md-6">
                            <label class="o_label">ACABADO</label>
                            <select class="o_select" t-model="state.selection.finish_id">
                                <option value="">SELECCIONE...</option>
                                <t t-foreach="state.finishes" t-as="f" t-key="f.id">
                                    <option t-att-value="f.id"><t t-esc="f.name.toUpperCase()"/></option>
                                </t>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="o_label">ESPESOR</label>
                            <select class="o_select" t-model="state.selection.thickness_id">
                                <option value="">SELECCIONE...</option>
                                <t t-foreach="state.thicknesses" t-as="t" t-key="t.id">
                                    <option t-att-value="t.id"><t t-esc="t.name.toUpperCase()"/></option>
                                </t>
                            </select>
                        </div>
                    </div>
                    <div class="text-end mt-4">
                        <button class="o_btn_primary" t-on-click="() => this.state.step = 2">CONTINUAR</button>
                    </div>
                </div>

                <!-- PASO 2: RAMIFICACIÓN -->
                <div t-if="state.step === 2" class="o_fade_in text-center">
                    <h3 class="mb-4 text-muted">¿ES PLACA O FORMATO?</h3>
                    <div class="d-flex justify-content-center gap-4">
                        <div class="o_choice_card" t-on-click="() => this.selectType('Placas')">
                            <i class="fa fa-layer-group"/>
                            <span>PLACA</span>
                        </div>
                        <div class="o_choice_card" t-on-click="() => this.selectType('Formatos')">
                            <i class="fa fa-th"/>
                            <span>FORMATO</span>
                        </div>
                    </div>
                    <button class="btn btn-link mt-4" t-on-click="() => this.state.step = 1">VOLVER</button>
                </div>

                <!-- PASO 3: SELECCIÓN FINAL -->
                <div t-if="state.step === 3" class="o_fade_in">
                    <h3 class="mb-4 o_primary_color">CATEGORÍA ESPECÍFICA</h3>
                    <select class="o_select mb-4" t-model="state.selection.category_id">
                        <option value="">ELIJA CATEGORÍA HIJA...</option>
                        <t t-foreach="state.subCategories" t-as="sc" t-key="sc.id">
                            <option t-att-value="sc.id"><t t-esc="sc.display_name.toUpperCase()"/></option>
                        </t>
                    </select>
                    <div class="d-flex justify-content-between">
                        <button class="btn btn-secondary" t-on-click="() => this.state.step = 2">ATRÁS</button>
                        <button class="o_btn_success" t-on-click="createProduct">CREAR PRODUCTO</button>
                    </div>
                </div>

            </div>
        </div>
    </t>
</templates>